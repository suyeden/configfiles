{
	"name": "vscode-csstree",
	"displayName": "CSSTree validator",
	"description": "Validate CSS according to W3C specs and browser implementations",
	"version": "1.1.0",
	"keywords": [
		"css",
		"csstree",
		"lint",
		"validator",
		"w3c"
	],
	"contributors": [
		"Sergey Melyukov <s.melukov@gmail.com>"
	],
	"license": "MIT",
	"publisher": "smelukov",
	"engines": {
		"vscode": "^1.4.0"
	},
	"categories": [
		"Linters"
	],
	"activationEvents": [
		"onLanguage:css"
	],
	"homepage": "https://github.com/csstree/vscode-plugin",
	"repository": "https://github.com/csstree/vscode-plugin",
	"bugs": "https://github.com/csstree/vscode-plugin/issues",
	"main": "./out/src/extension",
	"galleryBanner": {
		"theme": "dark",
		"color": "#333"
	},
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "CSSTree validtor configuration",
			"properties": {
				"csstree.enable": {
					"type": "boolean",
					"default": true,
					"description": "Enable CSSTree validation for CSS files."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "tsc -p ./",
		"compile": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install"
	},
	"devDependencies": {
		"@types/node": "^6.0.40",
		"typescript": "^2.4.2",
		"vscode": "^1.1.18"
	},
	"dependencies": {
		"csstree-validator": "~2.0.0",
		"vscode-languageclient": "~2.6.0",
		"vscode-languageserver": "~2.6.0"
	},
	"__metadata": {
		"id": "728edef3-6dc4-4e13-a84d-65ecdff6a365",
		"publisherId": "fdda85ff-d682-46eb-beda-6f5435946181",
		"publisherDisplayName": "Sergey Melyukov"
	}
}